<form action="/random/results">
  <div>
    <label for="min_id">Minimum</label>
    <input id="min_id" name="user_min" placeholder="E.g. 1.5">
  </div>

  <div>
    <label for="max_id">Maximum</label>
    <input id="max_id" name="user_max" placeholder="E.g. 4.5">
  </div>

  <div>
    <button>Pick a random number</button>
  </div>
</form>
